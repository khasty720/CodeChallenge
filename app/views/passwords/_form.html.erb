
<div class="well col-sm-6">
<%= form_for(@password) do |f| %>

<%= render 'error_messages' %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-primary btn-sm" %>
  </div>
<% end %>
</div>
